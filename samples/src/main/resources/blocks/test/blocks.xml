<sv:root xmlns:sv="http://jukta.com/tahoe/schema"
         xmlns="http://www.w3.org/1999/xhtml"
         namespace="test"
         xmlns:lc=".">

    <sv:block name="blockA">
        <input></input>
        <sv:def name="qwe">
            <sv:for var="i" in="${name}">
                <div>
                    <span>hello ${i}</span>
                </div>
            </sv:for>
        </sv:def>

    </sv:block>

    <sv:block name="blockB">
        <lc:blockA>
            <sv:def name="qwe">
                override ${x}
                <sv:parent/>
            </sv:def>
        </lc:blockA>
    </sv:block>

    <sv:block name="blockC" parent="blockA">
        <sv:def name="qwe">
            <sv:set name="x" value="set_x" override="true"/>
            override ${x}
            <sv:parent/>
        </sv:def>
    </sv:block>

    <sv:block name="Main">
        <sv:tag name="!DOCTYPE html"/>
        <html>
            <head>
                <link rel="stylesheet" href="resources/all.css" type="text/css"/>
                <script src="resources/all.js" type="text/javascript"/>
            </head>
            <body>
                <div class="c1">there are changes?</div>
                <sv:for var="i" in="${arr}">
                    <h1>Hello world !!!! ${i}</h1>
                </sv:for>
                <sv:if exp="${checked}">
                    <h2>${checked}</h2>
                </sv:if>
                <lc:blockC x="hey" name="${arr}"/>
            </body>
        </html>
    </sv:block>

</sv:root>