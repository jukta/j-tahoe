<sv:root xmlns:sv="http://svsoft.net/tahoe/schema" xmlns="http://www.w3.org/1999/xhtml" pref="lc">

    <sv:block name="SetLocal_A">
        <sv:set name="a" value="A"/>
        ${a}
    </sv:block>

    <sv:block name="SetLocalOverride_A">
        <sv:set name="a" value="A" override="false"/>
        ${a}
        <sv:set name="b" value="B"/>
        ${b}
    </sv:block>

    <sv:block name="SetGlobal_A">
        <sv:set name="a" value="A" visibility="GLOBAL"/>
        ${a}
    </sv:block>

    <sv:block name="SetGlobalOverride_A">
        <sv:set name="a" value="A" visibility="GLOBAL" override="false"/>
        ${a}
        <sv:set name="b" value="B" visibility="GLOBAL"/>
        ${b}
    </sv:block>

</sv:root>