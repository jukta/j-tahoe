<th:root xmlns:th="http://jukta.com/tahoe/schema"
         xmlns="http://www.w3.org/1999/xhtml"
         namespace="pages"
         xmlns:lc="."
         xmlns:lb="test"
         xmlns:fm="form"
         xmlns:wdg="widgets"
         xmlns:lt="layout">

    <th:block name="abstractPage">
        <th:tag name="!DOCTYPE html"/>
        <html>
            <head>
                <th:def name="head"/>
            </head>
            <body>
                <th:def name="body"/>
            </body>
        </html>
    </th:block>

    <th:block name="IndexPage" parent="lc:abstractPage">
        <th:def name="head">
            <link rel="stylesheet" href="resources/all.css" type="text/css"/>
            <script src="resources/all.js" type="text/javascript"/>
        </th:def>
        <th:def name="body">
            <div class="mainLayout">
                <div class="leftPanel">

                    <wdg:FilterPanel a="a1">
                        <lt:verticalLayout padding="true" spacing="true">
                            <fm:textField fieldName="hello1" label="Field 1" value="hello 1" error="true"/>
                            <fm:textField fieldName="hello2" label="Field 2" value="hello 2"/>
                            <hr/>
                            <span>Overridden</span>
                            <span>def</span>
                            <lt:horizontalLayout spacing="true">
                                <fm:button label="Ok"/>
                                <fm:button label="Cancel"/>
                            </lt:horizontalLayout>
                        </lt:verticalLayout>

                    </wdg:FilterPanel>
                    <th:include name="widgets.FilterPanel">
                    </th:include>
                    <!--<lb:Button name="hello"/>-->
                </div>
                <div class="rightPanel">
                    <wdg:ClientPanel title="Arrowfield Trading" list="${list}"/>
                </div>
            </div>
        </th:def>
    </th:block>

</th:root>