<th:root xmlns:th="http://jukta.com/tahoe/schema"
         xmlns="http://www.w3.org/1999/xhtml"
         xmlns:lc="."
         namespace="com/jukta/lib/test">

    <th:block name="Main">
        <th:tag name="!DOCTYPE html"/>
        <html>
            <head>
                <th:def name="head"/>
            </head>
            <body>
                <th:def name="body"/>
            </body>
        </html>
    </th:block>

    <th:block name="Button" dataHandler="buttonDataHandler">
        <div class="button" a-controller="button">
        ${message}
        <button a-click="clk">${name}</button>
        </div>
    </th:block>

</th:root>